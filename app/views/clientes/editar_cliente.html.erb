<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">

        <h1>Actualizar Cliente</h1>

        <%= form_for :cliente, :url => {:controller => "clientes", :action => "actualizar_cliente",
  :id => @cliente } do |form| %>

        <div class="form-group">
        <p>
          <%= form.label :nombre, "Nombre"%>
          <%= form.text_field :nombre,:class => "form-control", :required => true%>
        </p>
        </div>

        <div class="form-group">
        <p>
          <%= form.label :apellido, "Apellido"%>
          <%= form.text_field :apellido,:class => "form-control",:required => true%>
        </p>
        </div>

        <div class="form-group">
        <p>
          <%= form.label :direccion, "Direccion"%>
          <%= form.text_field :direccion,:class => "form-control",:required => true%>
        </p>
        </div>


        <div class="form-group">
        <p>
          <%= form.label :telefono, "Telefono"%>
          <%= form.text_field :telefono, :class => "form-control",:required => true%>
        </p>
        </div>
         <%= link_to "Atras", :back, :class => "btn btn-primary"%>
        <%= form.submit "Actualizar Cliente", :class => "btn btn-primary"%>



          <%end%>

      </div>
    </div>
  </div>
</div>